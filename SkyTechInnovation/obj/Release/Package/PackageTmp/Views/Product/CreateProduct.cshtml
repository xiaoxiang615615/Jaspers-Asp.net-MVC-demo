
@{
    ViewBag.Title = "CreateProduct";
}

<br />
<form role="form" class="form-horizontal" action="~/Product/CreateProductSQLAction/" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <div class="form-inline">
            <label class="col-sm-2 control-label">Name</label>
            <div class="col-sm-3">
                <input type="text" class="form-control" id="Name" placeholder="Name" name="name" />
            </div>
            <label class="col-sm-2 control-label">No</label>
            <div class="col-sm-3">
                <input type="text" class="form-control" id="No" placeholder="No" name="no" />
            </div>
        </div>
    </div>
    <div class="form-group">
        <div>
            <label class="col-sm-2 control-label">Cost</label>
            <div class="col-sm-3">
                <input type="text" class="form-control" id="Cost" placeholder="Cost" name="cost" />
            </div>
            <label class="col-sm-2 control-label">Pic:</label>
            <div class="col-sm-3">
                <input type="file" class="form-control" name="file" />
            </div>
        </div>
    </div>
    <div class="form-group">
        <div>
            <label class="col-sm-2 control-label">Note</label>
            <div class="col-sm-9">
                <textarea class="form-control" rows="5" style="width:100%" id="Note" name="note"></textarea>
            </div>
        </div>
    </div>
    <br />
    <hr />
    <br />

    <div class="form-group">
        <div>
            <label class="col-sm-2 control-label">Price</label>
            <div class="col-sm-3">
                <input type="text" class="form-control" id="Price" placeholder="Price" name="price" />
            </div>
            <label class="col-sm-2 control-label">Category</label>
            <div class="col-sm-3">
                <select class="form-control" id="Category" name="cate">
                    <option>DJI</option>
                    <option>DIY</option>
                </select>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div>
            <label class="col-sm-2 control-label">Prod Desc</label>
            <div class="col-sm-9">
                <textarea class="form-control" rows="5" style="width:100%" id="ProdDesc" name="proddesc"></textarea>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-1">
            <input type="submit" class="btn btn-primary" id="CreateButton" value="Submit" />
        </div>
        <div class="col-sm-1">
            <a class="btn btn-primary" id="CancelButton" href="~/Product/ProductControlBrowse">Cancel</a>
        </div>
    </div>
</form>

