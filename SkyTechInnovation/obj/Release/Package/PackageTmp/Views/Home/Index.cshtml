<script type="text/javascript">
        $(document).ready(function () {
            //alert("Working!!!");
            getSlideShowDetail();
            $('.carousel').carousel(0);
        })

        //Jquery web service call
        function getSlideShowDetail() {
            var webMethod = "http://skytechinnovation.com.au/WebServices/WebService.asmx/getSlideShows";
            var counter = 0;
            $.ajax({
                type: "POST",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                url: webMethod,
                data: "{'test':'123'}",
                success: function (msg) {
                    //alert("Working!!");
                    var slideShows = JSON.parse(msg.d);
                    $.each(slideShows, function (i, item) {
                        //console.log(item);
                        console.log(item);
                        if(counter == 0){
                            var slideDetail = $("<div class=\"item active\"><img src=\"" + item.Path + "\" class=\"caroselImageSize\" alt=\"\" id=\"SlideShow1\"><div class=\"carousel-caption\"></div></div>");
                            counter++;
                        }
                        else{
                            var slideDetail = $("<div class=\"item\"><img src=\"" + item.Path + "\" class=\"caroselImageSize\" alt=\"\" id=\"SlideShow1\"><div class=\"carousel-caption\"></div></div>");

                        }
                        slideDetail.appendTo("#SlideShow");
                    })
                },
                error: function (e) {
                    alert("Web Service is not working!");
                }
            });
        }
</script>

